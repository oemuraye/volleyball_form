<div class="table-responsive container my-3">
    <table class="table table-striped table-bordered border-white pb-5">
        <thead>
            <tr>
                <th scope="col" class="table-icon">
                    <img src="path/to/tableDot" alt="dot" width="30px" height="30px" />
                </th>
                {{!-- <th scope="col">First Name</th> --}}
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">WhatsApp Num.</th>
                <th scope="col">Phone Num.</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#if teamMembers.length}}
                {{#each teamMembers}}
                    <tr>
                        <td class="table-icon">
                            <img src="/assets/uploads/{{profile_pic}}" alt="dot" width="30px" height="30px" />
                        </td>
                        <td role="button" class="{{_id}}">{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{contact}}</td>
                        <td>{{whatsapp_number}}</td>
                        <td class="dropdown drop text-center" title="Click">
                            <i role="button" class="fa fa-eye" data-toggle="dropdown" data-hover="dropdown" aria-expanded="true"></i>
                            <div class="dropdown-menu drop-action">
                                <span role="button" class="dropdown-item text-info" onclick="viewBusiness('{{id}}')"> View </span>
                                <span role="button" class="dropdown-item text-danger" onclick="deleteUser('{{id}}')"> Delete </span>
                            </div>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="6">
                        <p>There are no team members</p>
                    </td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</div>
