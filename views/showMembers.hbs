<style>
    a {
        text-decoration: none;
    }
    .player-details .modal-dialog {
        max-width: 1000px;
    }
    .profile-pic img {
        aspect-ratio: 3/2;
        max-height: 450px;
    }
</style>
<div class="table-responsive container my-3">
{{> flash}}
    <table class="table table-striped table-bordered border-white">
        <thead>
            <tr>
                <th scope="col" class="table-icon">
                    *
                </th>
                {{!-- <th scope="col">First Name</th> --}}
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">WhatsApp Num.</th>
                <th scope="col">Phone Num.</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#if teamMembers.length}}
                {{#each teamMembers}}
                    <tr>
                        <td class="table-icon">
                            <img src="/assets/uploads/{{profile_pic}}" class="rounded" alt="profile_pic" width="40px" height="40px" />
                        </td>
                        <td role="button" class="{{_id}}">{{first_name}}  {{last_name}}</td>
                        <td>{{email}}</td>
                        <td>+{{contact}}</td>
                        <td>+{{whatsapp_number}}</td>
                        {{!-- <td class="" title="Click to View">
                            <a  href="/show/{{_id}}" role="button" class="fa fa-eye text-info"></a>
                        </td> --}}
                        <td class="" >
                            <span role="button" title="Click to View" class="fa fa-eye text-info" data-bs-toggle="modal" data-bs-target="#modal{{_id}}"></span>

                            <!-- Modal -->
                            <div class="modal player-details fade" id="modal{{_id}}" tabindex="-1" aria-labelledby="modalLabel{{_id}}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel"></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <section class="user-profile container py-4">
                                            <div class="row">
                                                <div class="col-lg-4 d-grid align-items-start mb-5">
                                                    <div class="card shadow-sm">
                                                        <div class="card-header bg-transparent text-center py-5 profile-pic">
                                                            <img class="rounded-2 img-fluid" src="/assets/uploads/{{profile_pic}}" alt="profile-pic" width="100%" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-8 mb-5">
                                                    <div class="card shadow-sm">
                                                        <div class="card-header bg-transparent border-0 my-2">
                                                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                                                        </div>
                                                        <div class="card-body pt-0">
                                                            <table class="table table-bordered">
                                                                <tbody>
                                                                    <tr class="mb-4">
                                                                        <th class="ps-2" width="30%">Name</th>
                                                                        <td width="2%">:</td>
                                                                        <td>{{first_name}} {{middle_name}} {{last_name}}</td>
                                                                    </tr>
                                                                    <tr class="mb-4">
                                                                        <th class="ps-2" width="30%">Email</th>
                                                                        <td width="2%">:</td>
                                                                        <td>{{email}}</td>
                                                                    </tr>
                                                                    <tr class="mb-4">
                                                                        <th class="ps-2" width="30%">Gender</th>
                                                                        <td width="2%">:</td>
                                                                        <td>{{gender}}</td>
                                                                    </tr>
                                                                    <tr class="mb-4">
                                                                        <th class="ps-2" width="30%">Phone Number</th>
                                                                        <td width="2%">:</td>
                                                                        <td>+{{contact}}</td>
                                                                    </tr>
                                                                    <tr class="mb-4">
                                                                        <th class="ps-2" width="30%">WhatsApp Number</th>
                                                                        <td width="2%">:</td>
                                                                        <td>+{{whatsapp_number}}</td>
                                                                    </tr>
                                                                    <tr class="mb-4">
                                                                        <th class="ps-2" width="30%">Address</th>
                                                                        <td width="2%">:</td>
                                                                        <td>{{address}}</td>
                                                                    </tr>
                                                                    <tr class="mb-4">
                                                                        <th class="ps-2" width="30%">Birthday</th>
                                                                        <td width="2%">:</td>
                                                                        <td>{{date_of_birth}}</td>
                                                                    </tr>
                                                                    <tr class="mb-4">
                                                                        <th class="ps-2" width="30%">Occupation</th>
                                                                        <td width="2%">:</td>
                                                                        <td>{{occupation}}</td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-danger" title="Click to Delete Player">
                                            <form class="mb-0" method="POST" action="/delete/{{_id}}">
                                               Remove Player
                                            </form>
                                        </button>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="" title="Click to Delete Player">
                            <form method="POST" action="/delete/{{_id}}">
                                <button role="button" class="border-0 fa fa-trash text-danger"></button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="6">
                        <p>There are no team members</p>
                    </td>
                </tr>
            {{/if}}
        </tbody>
    </table>
