<section class="blogDetails-content container-fluid my-5 bg-white py-5 rounded">
    <div class="d-flex">
        <span role="button" onclick="history.back()" class="rounded p-2">
            <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Go back
        </span>
    </div>

    <!-- User Profile Details -->
    <section>
        <h3 class="text-center mt-5">Profile Details</h3>

        <section class="user-profile container py-4">
            <div class="row">
                <div class="col-lg-4 d-grid align-items-start mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent text-center py-5">
                            <img class="rounded-2" src="/assets/uploads/{{profile_pic}}" alt="profile-pic" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 mb-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent border-0 my-2">
                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                        </div>
                        <div class="card-body pt-0">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr class="mb-4">
                                        <th class="ps-2" width="30%">Name</th>
                                        <td width="2%">:</td>
                                        <td>{{first_name}}</td>
                                    </tr>
                                    <!-- Add similar rows for Last Name, Email, Role, etc. -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
</section>